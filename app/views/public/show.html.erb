<% @page_title = @page.name %>

<article>

<h2><%= @page.name %></h2>

<% @page.sections.visible.sorted.each do |section| %>

    <section>
        <h3><%= section.name %></h3>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <% case section.content_type %>
                <% when "html" %>
                    <%= raw(sanitize(section.content, :tag => ["strong", "em", "a"])) %>
                <% when "text" %>
                    <%= simple_format(section.content) %>
                <% end %>
            </div>
        </div>
    </section>

<% end %>

</article>


