<% @page_title = "Pages" %>

<div>

<h2>Pages</h2>
<%= link_to("Add New", new_page_path)%>

<table>
    <thead>
    <tr>
        <th>#</th>
        <th>Page</th>
        <th>Permalink</th>
        <th>Visible</th>
        <th>Subject</th>
        <th>Sections</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>

    <% @pages.each do |page| %>
    <tr>
        <td><%= page.position %></td>
        <td><%= page.name %></td>
        <td><%= page.permalink %></td>
        <td><%= status_tag(page.visible) %></td>
        <td><%= page.subject.name %></td>
        <td><%= page.sections.size %></td>
        <td>
            <%= link_to("Show", page_path(page)) %>
            <%= link_to("Edit", edit_page_path(page)) %>

            <%= form_for(page, :method => "delete") do |f| %>
                <%= f.submit("Delete") %>
            <% end %>
        </td>
    </tr>
    <% end %>

    </tbody>
</table>

</div>