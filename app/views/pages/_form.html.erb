<%= error_messages_for(f.object) %>

 <div class="form-group">
    <%= f.label(:name, :class => "control-label col-md-2") %>
    <div class="col-md-10">
        <%= f.text_field(:name, :class => "form-control") %>
    </div>
</div>

 <div class="form-group">
    <%= f.label(:subject_id, :class => "control-label col-md-2") %>
    <div class="col-md-10">
        <%= f.select(:subject_id, @subjects.map {|s| [s.name, s.id]}, {}, :class => "form-control") %>
    </div>
</div>

 <div class="form-group">
    <%= f.label(:permalink, :class => "control-label col-md-2") %>
    <div class="col-md-10">
        <%= f.text_field(:permalink, :class => "form-control") %>
    </div>
</div>

 <div class="form-group">
    <%= f.label(:position, :class => "control-label col-md-2") %>
    <div class="col-md-10">
        <%= f.select(:position, 1..@page_count, {}, :class => "form-control") %>
    </div>
</div>

 <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <label>
            <%= f.check_box(:visible) %> Visible
            </label>
        </div>
    </div>
</div>