<%= error_messages_for(f.object) %>
<div>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
</div>

<div>
    <%= f.label(:subject_id) %>
    <%= f.select(:subject_id, @subjects.map {|s| [s.name, s.id]}) %>
</div>

<div>
    <%= f.label(:permalink) %>
    <%= f.text_field(:permalink) %>
</div>

<div>
    <%= f.label(:position) %>
    <%= f.select(:position, 1..@page_count) %>
</div>

<div>
    <%= f.label(:visible) %>
    <%= f.check_box(:visible) %>
</div>