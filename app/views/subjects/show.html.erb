<%= flash[:notice] %>

<div>

<h2>Subject</h2>

<table>
    <thead>
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Visible</th>
        <th>Pages</th>
        <th>Created</th>
        <th>Updated</th>
    </tr>
