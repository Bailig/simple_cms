<% @page_title = "Subjects" %>

<h2><%= @page_title %></h2>
<a href=<%= new_subject_path %> class="btn btn-primary" role="button">Add New</a>

<div class="row">

<table class="table table-hover">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Visible</th>
        <th>Pages</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>

    <% @subjects.each do |subject| %>
    <tr>
        <td><%= subject.position %></td>
        <td>
            <%= link_to(subject.name, subject_path(subject), :data => {:toggle => "tooltip", :placement => "top"}, :title => "Detail") %>
        </td>
        <td><%= status_tag(subject.visible) %></td>
        <td>
            <%= link_to(pluralize(subject.pages.size, 'Page'), pages_path(:subject_id => subject.id), :data => {:toggle => "tooltip", :placement => "top"}, :title => "Pages") %>
        </td>
        <td>
            <%= edit_button_for(edit_subject_path(subject)) %>
            
            <a href=<%= delete_subject_path(subject) %> class="btn btn-danger glyphicon glyphicon-trash" role="button" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Delete"></a>
        </td>
    </tr>
    <% end %>

    </tbody>
</table>

</div>


