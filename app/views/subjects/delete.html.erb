<% @page_title = "Delete Subject" %>

<div class="row">
<div class="col-md-8">

<h2><%= @page_title %></h2>

<p>Are you sure you want to permanetly delete this subject?</p>

<dl class="dl-horizontal">

    <dt>#</dt>
    <dd><%= @subject.position %></dd>

    <dt>Name</dt>
    <dd><%= @subject.name %></dd>

    <dt>Visible</dt>
    <dd><%= @subject.visible ? "Yes" : "No" %></dd>

    <dt>Pages</dt>
    <dd><%= pluralize(@subject.pages.size, 'Page') %></dd>

    <dt>Created</dt>
    <dd><%= @subject.created_at.to_s(:long) %></dd>

    <dt>Updated</dt>
    <dd><%= @subject.updated_at.to_s(:long) %></dd>

</dl>

<%= form_for(@subject, :method => "delete") do |f| %>
    <%= f.submit("Delete", :class => "btn btn-danger") %>
    <%= link_to("Cancel", subjects_path, :class => "btn btn-default") %>
<% end %>


</div>
</div>
