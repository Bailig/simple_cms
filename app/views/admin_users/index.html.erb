<% @page_title = "Admin Users" %>


<div>

<h2>Admin Users</h2>
<%= link_to("Add New", new_admin_user_path)%>

<table>
    <thead>
    <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>

    <% @admin_users.each do |admin_user| %>
    <tr>
        <td><%= admin_user.username %></td>
        <td><%= admin_user.name %></td>
        <td><%= mail_to(admin_user.email) %></td>
        <td>
            <%= link_to("Edit", edit_admin_user_path(admin_user)) %>
            <%= form_for(admin_user, :method => "delete") do |f| %>
                <%= f.submit("Delete") %>
            <% end %>
        </td>
    </tr>
    <% end %>

    </tbody>
</table>

</div>