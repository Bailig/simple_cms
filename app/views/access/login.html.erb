<% @page_title = "Admin Login" %>

<div class="row">
<div class="col-md-11">

    <h2><%= @page_title %></h2>

    <%= form_tag(access_attempt_login_path, {:method => "post", :class => "form-horizontal"}) do %>

        <div class="form-group">
            <%= label_tag(:username, nil, :class => "control-label col-md-2") %>
            <div class="col-md-10">
                <%= text_field_tag(:username, params[:username], :class => "form-control") %>
            </div>
        </div>
        
        <div class="form-group">
            <%= label_tag(:password, nil, :class => "control-label col-md-2") %>
            <div class="col-md-10">
                <%= password_field_tag(:password, nil, :class => "form-control") %>
            </div>
        </div>

        <div class="col-md-10 col-md-offset-2">
            <%= submit_tag("Log In", :class => "btn btn-primary") %> 
        </div>
    <% end %>

</div>
</div>