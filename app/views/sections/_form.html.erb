<%= error_messages_for(f.object) %>

 <div class="form-group">
    <%= f.label(:name, :class => "control-label col-md-2") %>
    <div class="col-md-10">
        <%= f.text_field(:name, :class => "form-control") %>
    </div>
</div>

 <div class="form-group">
    <%= f.label(:page_id, :class => "control-label col-md-2") %>
    <div class="col-md-10">
        <%= f.select(:page_id, @pages.map {|p| [p.name, p.id]}, {}, :class => "form-control") %>
    </div>
</div>

 <div class="form-group">
    <%= f.label(:position, :class => "control-label col-md-2") %>
    <div class="col-md-10">
        <%= f.select(:position, 1..@section_count, {}, :class => "form-control") %>
    </div>
</div>

 <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <label>
            <%= f.check_box(:visible) %> Visible
            </label>
        </div>
    </div>
</div>

 <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <label class="radio-inline">
            <%= f.radio_button(:content_type, "text") %> Text
        </label>
        <label class="radio-inline">
            <%= f.radio_button(:content_type, "html") %> HTML
        </label>
    </div>
</div>

 <div class="form-group">
    <%= f.label(:content, :class => "control-label col-md-2") %>
    <div class="col-md-10">
        <%= f.text_area(:content, :rows => 6, :class => "form-control") %>
    </div>
</div>