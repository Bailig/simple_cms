<% @page_title = "Edit a Section" %>

<div class="row">
<div class="col-md-11">

    <h2><%= @page_title %></h2>

    <%= form_for(@section, :url => section_path(@section, :page_id => @page.id), :html => {:class => "form-horizontal"}) do |f|%>

        <%= render(:partial => "form", :locals => {:f => f}) %>

        <div class="col-md-10 col-md-offset-2">
            <%= f.submit("Save", :class => "btn btn-primary") %>
            <%= link_to("Cancel", sections_path(:page_id => @page.id), :class => "btn btn-default") %>
        </div>

    <% end %>

</div>
</div>