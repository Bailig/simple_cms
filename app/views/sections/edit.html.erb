<% @page_title = "Edit a Section" %>

<div>

<h2>Create Section</h2>

<%= form_for(@section, :url => section_path(@section, :page_id => @page.id)) do |f|%>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <div>
        <%= f.submit("Update Section") %>
        <%= link_to("Back", sections_path(:page_id => @page.id)) %>
    </div>

<% end %>

</div>