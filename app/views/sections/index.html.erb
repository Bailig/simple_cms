<% @page_title = "Sections" %>

<%= link_to("Back", pages_path(:subject_id => @page.subject_id)) %>
<div>

<h2>Sections</h2>
<%= link_to("Add New", new_section_path(:page_id => @page.id))%>

<table>
    <thead>
    <tr>
        <th>#</th>
        <th>Section</th>
        <th>Visible</th>
        <th>Page</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>

    <% @sections.each do |section| %>
    <tr>
        <td><%= section.position %></td>
        <td><%= section.name %></td>
        <td><%= status_tag(section.visible) %></td>
        <td><%= section.page.name %></td>
        <td>
            <%= link_to("Show", section_path(section, :page_id => @page.id)) %>
            <%= link_to("Edit", edit_section_path(section, :page_id => @page.id)) %>

            <%= form_for(section, :url => section_path(section, :page_id => @page.id), :method => "delete") do |f| %>
                <%= f.submit("Delete") %>
            <% end %>
        </td>
    </tr>
    <% end %>

    </tbody>
</table>

</div>